<%- include('../partials/head') %>
<div class="skew">
</div>

<div class="container-fluid show_page">
	<div id="event_data" class="card detail"
		data-Id="<%= event._id %>"
		data-Name="<%= event.name %>"
		data-Org="<%= event.org %>"
		data-Code="<%= event.eventCode %>"
		data-Time="<%= event.time %>"
		data-Address="<%= event.address%>"
		data-City="<%= event.city %>"
		data-State="<%= event.state %>"
		data-Zip="<%= event.zip %>"
		data-Description="<%= event.description %>"
	>
		<h4 class="card-title"><%= event.name %></h4>
		<h6 class="card-subtitle mb-2 text-muted"><%= event.org %></h6>
		<p class="card-text">Event Code: <%= event.eventCode %></p>
		<p class="card-text"><%= event.time %></p>
		<p class="card-text"><%= event.address %></p>
		<p class="card-text"><%= event.city + ' ' + event.state + ' ' + event.zip %></p>
		<p class="card-text"><%= event.description %></p>
		<button id="edit_event_button" class="btn btn-default same_button edit">Edit Event</button>
		<button id="delete_event_button" class="btn btn-default same_button">Delete Event</button>
	</div>
</div>

<div class="confirm delete">
	<div class="content">
		<p>Are you sure you want to delete this event?</p>
		<button class="btn btn-default same_button back" id="confirm_back_button">Back</button>
		<form action="/events/<%= event._id %>?_method=DELETE" method="POST">
			<input id="confirm_delete" class="btn btn-default same_button delete" value="Delete Event" type="submit" />
		</form>
	</div>

</div>


<%- include('../partials/foot') %>