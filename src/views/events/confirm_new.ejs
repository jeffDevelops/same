<%- include('../partials/head') %>

<div class="skew">
</div>

<div id="confirm" class="container-fluid">

	<a id="confirm_back_button" class="back_button" href="/events/new/meetup"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>

	<div class="col-xs-2"></div>
	<div class="col-xs-8">
		<form action="/events/<%= savedEvent._id %>/?_method=PUT" method="POST">
			<h3>Confirm Event Details</h3>
			<div class="form-group">
				<label for="eventName">Event Name</label>
				<input id="eventName" class="form-control" type="text" value="<%= savedEvent.name %>" name="name">
			</div>
			<div class="form-group">
				<label for="eventOrg">Organization Name</label>
				<input id="eventOrg" class="form-control" type="text" value="<%= savedEvent.org %>" name="organization">
			</div>
			<div class="form-group">
				<label for="eventTime">Event Time</label>
				<input id="eventTime" class="form-control" type="text" value="<%= savedEvent.time %>" name="time">
			</div>
			<div class="form-group">
				<label for="eventAddress">Event Address</label>
				<input id="eventAddress" class="form-control" type="text" value="<%= savedEvent.address %>" name="address">
			</div>
			<div class="form-group">
				<label for="eventCity">City</label>
				<input id="eventCity" class="form-control" type="text" value="<%= savedEvent.city %>" name="city">
			</div>
			<div class="form-group col-xs-6 state">
				<label for="eventState">State</label>
				<input id="eventState" class="form-control" type="text" value="<%= savedEvent.state %>" name="state">
			</div>
			<div class="form-group col-xs-6 zip">
				<label for="eventZip">Zipcode</label>
				<input id="eventZip"  class="form-control"type="text" value="<%= savedEvent.zip %>" name="zip">
			</div>
			<div class="form-group">
				<label for="eventDescription">Event Description</label>
				<textarea id="eventDescription" class="form-control" name="description">
					<%= savedEvent.description %>
				</textarea>
			</div>
			<input type="submit" value="Confirm Event" />
		</form>
	</div>
	<div class="col-xs-2"></div>
</div>

<%- include('../partials/foot') %>