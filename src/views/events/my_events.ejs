<%- include('../partials/head') %>

<div class="skew">
</div>


<div class="container-fluid">
	<h3>Events I've Created</h3>
	<% for (var i = 0; i < myEvents.length; i++) { %>
	<% console.log(myEvents); %>
	<% console.log(myEvents[i]); %>
		<div class="row">
			<div class="col-xs-12">
				<div class="card">
					<div class="card-block">
						<a class="clickable" href="/events/<%= myEvents[i]._id %>">
							<h4 class="card-title"> <%= myEvents[i].name/*.substr(0, 60) + '...'*/ %></h4>
							<h6 class="card-subtitle mb-2 text-muted">
								<% if(myEvents[i].org) { %>
									<%= myEvents[i].org.substr(0, 60) + '...' %>
								<% } %>
							</h6>
						</a>
						<p class="card-text"><%= myEvents[i].eventCode %></p>
						<p class="card-text"><%= myEvents[i].time %></p>
						<p class="card-text"><%= myEvents[i].address %></p>
						<p class="card-text"><%= myEvents[i].city + ' ' + myEvents[i].state + ' ' + myEvents[i].zip %></p>
					</div>
				</div>
			</div>
		</div>
	<% } %>
	<hr />
	<h3>Events I've Attended</h3>
</div>
	
<%- include('../partials/foot') %>